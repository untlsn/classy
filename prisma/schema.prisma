datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Class {
  id        Int       @default(autoincrement()) @id
  name      String    @unique
  students  Student[]
  tutor     Teacher   @relation(fields: [tutorId], references: [id])
  tutorId   Int       @unique
}

model Student {
  id      Int   @default(autoincrement()) @id
  class   Class @relation(fields: [classId], references: [id])
  classId Int
}

model Teacher {
  id      Int   @default(autoincrement()) @id
  class   Class?
}
