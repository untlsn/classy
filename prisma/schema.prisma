datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Class {
  id        Int       @default(autoincrement()) @id
  name      String    @unique
  students  Student[]
  tutor     Teacher   @relation(fields: [tutorId], references: [id])
  tutorId   Int       @unique
}

model User {
  id        Int       @default(autoincrement()) @id
  role      Role      @default(STUDENT)
  firstName String
  lastName  String
  birth     DateTime  @db.Date

  student   Student?
  teacher   Teacher?
}

enum Role {
  STUDENT
  TEACHER
}

model Student {
  id      Int     @default(autoincrement()) @id
  user    User    @relation(fields: [userId], references: [id])
  userId  Int     @unique
  class   Class?  @relation(fields: [classId], references: [id])
  classId Int
}

model Teacher {
  id      Int     @default(autoincrement()) @id
  user    User    @relation(fields: [userId], references: [id])
  userId  Int     @unique
  class   Class?
}
